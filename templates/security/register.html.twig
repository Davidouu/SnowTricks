{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div class="mx-auto max-w-xl flex flex-col items-center justify-center mt-20">
    <h1 class="h3 text-4xl mb-6 mt-3 text-center font-bold">Inscription</h1>

    <div class="w-1/2 border-solid border-2 rounded-md p-4">
        {{ form_start(form) }}
            <div class="mb-2">
                <label for="username" class="block text-gray-700 text-sm mb-1">Nom d'utilisateur</label>
                {{ form_widget(form.username, 
                { 'attr': {'class': 'form-control border-t-0 border-l-0 border-r-0 border-solid border-2 w-full p-1 text-center focus:border-blue-200 focus:outline-none',
                'placeholder': 'Username'} }) }}
                {% if form_errors(form.username) %}
                    <div class="text-red-500 text-sm">{{ form_errors(form.username) }}</div>
                {% endif %}
            </div>  
            <div class="mb-2">
                <label for="firstname" class="block text-gray-700 text-sm mb-1">Pr√©nom</label>
                {{ form_widget(form.firstname, 
                { 'attr': {'class': 'form-control border-t-0 border-l-0 border-r-0 border-solid border-2 w-full p-1 text-center focus:border-blue-200 focus:outline-none',
                'placeholder': 'Jean'} }) }}
                {% if form_errors(form.firstname) %}
                    <div class="text-red-500 text-sm">{{ form_errors(form.firstname) }}</div>
                {% endif %}
            </div>
            <div class="mb-2">
                <label for="lastname" class="block text-gray-700 text-sm mb-1">Nom</label>
                {{ form_widget(form.lastname, 
                { 'attr': {'class': 'form-control border-t-0 border-l-0 border-r-0 border-solid border-2 w-full p-1 text-center focus:border-blue-200 focus:outline-none',
                'placeholder': 'Dupont'} }) }}
                {% if form_errors(form.lastname) %}
                    <div class="text-red-500 text-sm">{{ form_errors(form.lastname) }}</div>
                {% endif %}
            </div>
            <div class="mb-2">
                <label for="email" class="block text-gray-700 text-sm mb-1">Email</label>
                {{ form_widget(form.email, 
                { 'attr': {'class': 'form-control border-t-0 border-l-0 border-r-0 border-solid border-2 w-full p-1 text-center focus:border-blue-200 focus:outline-none',
                'placeholder': 'mail@mail.com'} }) }}
                {% if form_errors(form.email) %}
                    <div class="text-red-500 text-sm">{{ form_errors(form.email) }}</div>
                {% endif %}
            </div>
            <div class="mb-2">
                <label for="password" class="block text-gray-700 text-sm mb-1">Mot de passe</label>
                {{ form_widget(form.password, 
                { 'attr': {'class': 'form-control border-t-0 border-l-0 border-r-0 border-solid border-2 w-full p-1 text-center focus:border-blue-200 focus:outline-none',
                'placeholder': '**********'} }) }}
                {% if form_errors(form.password) %}
                    <div class="text-red-500 text-sm">{{ form_errors(form.password) }}</div>
                {% endif %}
            </div>

            <input class="mt-4 pt-2 pb-2 pl-4 pr-4 bg-blue-200 rounded-lg hover:cursor-pointer" type="submit" value="S'inscrire" />
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
