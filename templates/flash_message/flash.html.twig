{% for successMessage in app.flashes('success') %}
    <div class="max-w-7xl px-2 sm:px-6 lg:px-8 mx-auto top-16 w-full flash-message">
        <div x-data
            class="py-3 px-5 mt-6 mb-4 bg-blue-100 text-blue-900 text-base rounded-md border"
            role="alert">
            {{ successMessage }}
        </div>
    </div>
{% endfor %}
{% for errorMessage in app.flashes('danger') %}
    <div class="max-w-7xl px-2 sm:px-6 lg:px-8 mx-auto top-16 w-full flash-message">
        <div x-data
            class="py-3 px-5 mt-6 mb-4 bg-red-100 text-red-900 text-base rounded-md border"
            role="alert">
            {{ errorMessage }}
        </div>
    </div>
{% endfor %}
