{% block comment %}
    <hr class="my-12 h-0.5 border-t-0 bg-blue-500" />
    <div class="w-1/2 mx-auto mt-11">
        {{ form_start(form) }}
            <div class="mb-2">
                {{ form_label(form.message, 'Commentaire', { 'label_attr' : { 'class' : 'label-primary'}}) }}
                {{ form_widget(form.message, 
                { 'attr': {'class': 'block  mt-2 w-full rounded-lg border border-gray-200 bg-white px-4 h-32 py-2.5 text-gray-700 focus:border-blue-400 focus:outline-none focus:ring focus:ring-blue-300 focus:ring-opacity-40',
                'placeholder': ''} }) }}
                {% if form_errors(form.message) %}
                    <div class="text-red-500 text-sm">{{ form_errors(form.message) }}</div>
                {% endif %}
            </div>
            <button type="submit" class="submit-primary float-right">Commenter</button>
        {{ form_end(form) }}
    </div>
{% endblock %}