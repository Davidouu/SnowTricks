{% extends 'base.html.twig' %}

{% block title %}Modifier la catégorie{% endblock %}

{% block body %}
<div class="container">
    <h1 class="h3 text-4xl mb-6 mt-3 text-center font-bold">Modifier la catégorie</h1>

    <div class="border-solid border-2 rounded-md p-4">
        {{ form_start(form) }}
            <div class="mb-2">
                {{ form_label(form.name, 'Nom de la catégorie', { 'label_attr' : { 'class' : 'label-primary'}}) }}
                {{ form_widget(form.name, 
                { 'attr': {'class': 'input-primary',
                'placeholder': 'Flip'} }) }}
                {% if form_errors(form.name) %}
                    <div class="text-red-500 text-sm">{{ form_errors(form.name) }}</div>
                {% endif %}
            </div>

            <input class="submit-primary" type="submit" value="Modifier" />
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
